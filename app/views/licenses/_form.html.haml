= form_for @license do |f|
  - if @license.errors.any?
    #error_explanation      
      %ul
        - @license.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label ':تصویر'
    = f.file_field :image
  .field
    = f.label ':عنوان به انگلیسی'
    = f.text_field :title_en
  .field
    = f.label 'عنوان به فارسی:'
    = f.text_field :title_fa
  .field
    = f.label 'متن به انگلیسی:'
    = f.text_area :text_en
  .field
    = f.label 'متن به فارسی'
    = f.text_area :text_fa
    
  .actions
    = f.submit 'ثبت', :class => "btn btn-default"
