= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title_en
    = f.text_field :title_en
  .field
    = f.label :title_fa
    = f.text_field :title_fa
  .field
    = f.label :description_en
    = f.text_area :description_en
  .field
    = f.label :description_fa
    = f.text_area :description_fa
  .actions
    = f.submit 'Save'
