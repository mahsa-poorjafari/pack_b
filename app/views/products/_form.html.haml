= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation      
      %ul
        - @product.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label 'گروه مربوطه را انتخاب کنید.'
    = f.select(:category_id, Category.all.collect {|u| [u.title_fa, u.id]}, :prompt => ' بخش را انتخاب کنید.') 
  .field
    = f.label 'عنوان به فارسی:'
    = f.text_field :title_fa
  .field
    = f.label 'عنوان به انگلیسی:'
    = f.text_field :title
  .field
    = f.label 'توضیحات به فارسی:'
    = f.text_area :description_fa
  .field
    = f.label 'توضیحات به انگلیسی:'
    = f.text_area :description
    
  .actions
    = f.submit 'ثبت', :class => "btn btn-default"
 
