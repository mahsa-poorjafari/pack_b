.page.fa.other-page  
  %h1 لیست صفحات متنی
  - if is_admin?
    = link_to 'ایجاد صفحه متنی جدید', new_page_path, :class => "btn btn-default"

  %table
    %tr
      %th عنوان صفحه
      %th عملیات

    - @pages.each do |page|
      %tr
        %td= page.title        
        %td
          = link_to 'مشاهده', page
          \|          
          = link_to 'ویرایش', edit_page_path(page)
          \|
          = link_to 'حذف', page, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }

  

  
