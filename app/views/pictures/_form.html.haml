= form_for @picture do |f|
  - if @picture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
      %ul
        - @picture.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description_en
    = f.text_field :description_en
  .field
    = f.label :description_fa
    = f.text_field :description_fa
  .field
    = f.label :product_id
    = f.number_field :product_id
  .actions
    = f.submit 'Save'
